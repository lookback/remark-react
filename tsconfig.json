{
  "compileOnSave": true,
  "compilerOptions": {
      "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
      "target": "es2017",
      "module": "commonjs",
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "declaration": true,
      "jsx": "react",
      "moduleResolution": "node",
      "outDir": "build",
      "rootDir": "src",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "noStrictGenericChecks": true
  },
  "include": [
      "./src/**/*"
  ]
}
